  <%- include('header')-%>
   
  <div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
                <h2 class="font-weight-bold text-light">
                    Login System 
                </h2>
                <span id="spn">Log in to the existing user</span>
                <% if(locals.logout){%>
                   <div class="alter alert-success text-center">
                        <%=logout%>
                   </div>
                <%}%>
        </div>

        <form action="/route/login" method="post" class="pt-3">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email">
                <p class="form-text text-muted text-start ">Register email adress</p>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="password" name="password">
            </div>
            <button type="submit" class="btn btn-success rounded-pill mt-3">submit</button>
        </form>
    </div>
  </div>

    <%- include('footer')-%>